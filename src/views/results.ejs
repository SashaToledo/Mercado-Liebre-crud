<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- todos los productos -->
	
	 
	
	<div class="container products-wrapper">
		<div class="row">

			
			<div class="col-12">


				<h2 class="products-title">Resultados de la búsqueda: <%= keywords %></h2>
			</div>
			
			
			 
			
			<% ProductardosFiltrardos.forEach(filtrados => { %> 
				
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%= filtrados.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= filtrados.image || "default-image.png" %> " alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%= toThousand(Math.trunc(filtrados.price - (filtrados.price / 100* filtrados.discount))) %></h2>
								
								<% if (filtrados.discount) {  %>
								
									<span><%= +filtrados.discount%> % OFF</span>
									<% } %>
								<p><%= filtrados.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>			
				<% }) %>
				
				 
					<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
				<div class="col-12">
					
				</div>
				
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>